<!--Main layout-->
<main class="mt-5 pt-5">
    <div class="container">

        <section>

            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="{{ recette.videoLink }}" width="100%" allowfullscreen></iframe>
            </div>
            <h2 class=" bg-success text-white text-center">{{ recette.getNom }}</h2>
            <div class="row">
                <table class="table table-bordered">
                    <thead class="table-primary">
                        <tr>
                             <th scope="col" class="text-center">Ingrédients</th>
                             <th scope="col" class="text-center">Préparation</th>
                        </tr>
                    </thead>
                    <tbody class="table-info">
                        <tr>
                            <td>{{ recette.getIngredients | raw }}</td>
                            <td>{{ recette.getDescription | raw }}</td>
                        </tr>
                    </tbody>
                </table>

            </div>


        </section>



    </div>
</main>
