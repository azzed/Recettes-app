<h1 class="text-center">Bienvenue {{ user.getPseudo }}</h1>
<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list"
               href="#list-home" role="tab" aria-controls="home">Recettes</a>
            <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list"
               href="#list-profile" role="tab" aria-controls="profile">Ajouter une recette</a>
            <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list"
               href="#user" role="tab" aria-controls="profile">modifier profil</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">

            <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
                <form method="post" action="?recipeAdd">
                    <h3 class="text-center">Ajouter une recette</h3>
                    <div class="form-group">
                        <label for="">Nom de la recette :</label>
                        <input name="nom" type="text" id=""/>
                    </div>
                    <div class="form-group">
                        <label for="">Ingredients :</label>
                        <textarea class="form-control" name="ingredients" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Liens de la recette :</label>
                        <input class="form-control" id="exampleTextarea" name="liens" placeholder="liens youtube"/>

                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea">Description</label>
                        <textarea class="form-control" id="exampleTextarea" name="description" rows="3"></textarea>
                    </div>

                    <input name="user_id" type=hidden value="{{ user.getId }}"/>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="alert-link">{{ message }}</a>.
                    </div>
                </form>
            </div>
            <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                <h3>Listes de recettes</h3>

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">nom de la recette</th>
                        <th scope="col">Action</th>

                    </tr>
                    </thead>
                    {% for recette in recettes %}
                        <tbody>
                        <tr>
                            <td>{{ recette.getNom() }}</td>
                            <td>
                                <button type="button" class="btn  btn-sm btn-danger" data-toggle="modal" data-target="#supprimer">Supprimer</button>
                                <a href="{{ recette.linkUpdate }}" class="btn btn-sm btn-primary">Modifier</a>
                                <div class="modal fade" id="supprimer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="supprimer">etes vous sur de supprimer cette recette ?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">fermer</button>
                                                <a href="{{ recette.linkDelete }}" class="btn btn-sm btn-danger ">Valide</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>

                        </tbody>
                    {% endfor %}
                </table>
                <br>

                <div class="alert alert-success" id="message" role="alert" style="display: none">
                    <a href="#" class="alert-link">une recette a été modifier</a>.
                </div>

            </div>
            <div class="tab-pane fade show" id="user" role="tabpanel">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">utilisateur</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td>{{ user.getPseudo }}</td>
                        <td>
                            <a href="{{ user.linkUpdated }}" class="btn btn-sm btn-primary">Modifier</a>
                            <div class="modal fade" id="supprimer" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">

                                </div>
                            </div>

                        </td>

                    </tr>

                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>


